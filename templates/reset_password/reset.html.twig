{% extends 'base.html.twig' %}

{% block title %}réinitialisez votre mot de passe{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col">
                <h1 class="iv-title text-center">INO VIN Dégustation</h1>
            </div>
        </div>
    </div>

    <div class="iv-reset-form">
        <h2 class="iv-center">Réinitialisez votre mot de passe</h2>
        <div class="mb-xl-5">
            <div class="form-group">
                {{ form_start(resetForm) }}
            </div>
            <div class="form-group">
                {{ form_row(resetForm.plainPassword, {'attr': {'class': 'form-control mb-5'}}) }}
            </div>
        </div>
        <button style="background-color: #B58654; width: 100%;" class="btn  btn-sm btn-block ">Réinitialiser le mot de
            passe
        </button>
        {{ form_end(resetForm) }}
    </div>
{% endblock %}

